<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../public/dev-images/fox.png">
    <title>Forum</title>
    <link rel="stylesheet" href="public/index.css">
    <link rel="stylesheet" href="public/grid.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('./components/header.ejs')  %>
    <!-- Content -->
    <div class="container gap-from-top">
    <%- include('./components/infoMessage.ejs') %>
    <%- include('./components/errorMessage.ejs') %>
        <a href="/new-post" class="standart-button my-3 inline-block">Create new post</a>
        <table>
            <thead>
                <tr>
                    <th class="col-6">Topics</th>
                    <th class="col-1">Replies</th>
                    <th class="col-1">Views</th>
                    <th class="col-4">Last post</th>
                </tr>
            </thead>
            <tbody>
                <% for(const post of posts) { %> 
                <%- include('./components/table-row.ejs', {post}) %> <% } %>
            </tbody>
        </table>
    </div>
    <script src="/public/index.js"></script>
</body>
</html>